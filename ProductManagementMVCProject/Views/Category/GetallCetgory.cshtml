@model IEnumerable<ProductManagementMVCProject.Dto.tblCategoryDto>;
<h2>Category Details:-</h2>
@{
    var cnt = 1;
}
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Category Name</th>
            <th scope="col">Category Description</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@cnt</th>
                <td>@item.CategoryName</td>
                <td class="description-cell">@item.CategoryDescription</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.CategoryId">Update</a>
                    <a class="btn btn-primary" asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.CategoryId" onclick="return confirm('Are you sure you want to delete this item?')">Delete</a>
                </td>
            </tr>
            cnt++;
        }
       
      @*   <tr>
            <th scope="row">2</th>
            <td>Jacob</td>
            <td>Thornton</td>
        </tr>
        <tr>
            <th scope="row">3</th>
            <td colspan="2">Larry the Bird</td>
        </tr> *@
    </tbody>
</table>
<a class="btn btn-primary" asp-controller="Category" asp-action="AddCategory">Add Category</a>
<style>
    .description-cell {
        max-width: 190px; /* Adjust the max-width as needed */
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>
